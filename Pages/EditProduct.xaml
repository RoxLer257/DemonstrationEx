<Page x:Class="test.Pages.EditProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="EditProduct">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Артикул:" Grid.Row="0" Grid.Column="0" Margin="15,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="tbArticul" Grid.Row="0" Grid.Column="2" Margin="0,0,0,0" Height="32" FontSize="16"/>

        <TextBlock Text="Тип продукта:" Grid.Row="2" Grid.Column="0" Margin="15,0,0,0" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbProductType" Grid.Row="2" Grid.Column="2" Margin="0,0,0,0" Height="32" FontSize="16"/>

        <TextBlock Text="Наименование:" Grid.Row="4" Grid.Column="0" Margin="15,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="tbName" Grid.Row="4" Grid.Column="2" Margin="0,0,0,0" Height="32" FontSize="16"/>

        <TextBlock Text="Мин. стоимость для партнера:" Grid.Row="6" Grid.Column="0" Margin="15,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="tbMinCost" Grid.Row="6" Grid.Column="2" Margin="0,0,0,0" Height="32" FontSize="16"/>

        <TextBlock Text="Ширина рулона (м):" Grid.Row="8" Grid.Column="0" Margin="15,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="tbRollWidth" Grid.Row="8" Grid.Column="2" Margin="0,0,0,0" Height="32" FontSize="16"/>

        <StackPanel Grid.Row="10" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,20,20">
            <Button x:Name="btnSave" Content="Сохранить" Width="120" Height="36" 
                    Background="#2D6033" Margin="0 0 20 0"
                    FontSize="24" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Назад" Width="120" 
                    Background="#2D6033"
                    Height="36" FontSize="24" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
